{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "plugin:import/errors",
    "plugin:import/warnings",
  ],
  "plugins": [
    "html"
  ],
  "rules": {
    "complexity": [2, 10],
    "no-bitwise": 2,
    "camelcase": [2, { "properties": "never" }],
    "curly": [2, "all"],
    "eqeqeq": 2,
    "wrap-iife": 2,
    "no-use-before-define": 2,
    "new-cap": 2,
    "no-caller": 2,
    "no-console": 1,
    "quotes": [2, "single"],
    "strict": [2, "global"],
    "no-undef": 2,
    "no-unused-vars": ["error", {
      "args": "none"
    }],
    "no-empty": 2,
    "comma-dangle": [2, "never"],
    "max-len": [2, 220],
    "comma-style": [2, "last"],
    "dot-notation": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": false }],
    "one-var": [2, "never"],
    "operator-linebreak": [2, "after"],
    "space-infix-ops": 2,
    "space-before-blocks": [2, "always"],
    "semi": 0,
    "eol-last": 2,
    "no-new": "off",
    "no-underscore-dangle": "off",
    "indent": ["error", 4]
  },
  "globals": {
    "TimelineLite" : false,
    "TimelineMax" : false,
    "TweenLite" : false,
    "TweenMax" : false,
    "Back" : false,
    "Bounce" : false,
    "Circ" : false,
    "Cubic" : false,
    "Ease" : false,
    "EaseLookup" : false,
    "Elastic" : false,
    "Expo" : false,
    "Linear" : false,
    "Power0" : false,
    "Power1" : false,
    "Power2" : false,
    "Power3" : false,
    "Power4" : false,
    "Quad" : false,
    "Quart" : false,
    "Quint" : false,
    "RoughEase" : false,
    "Sine" : false,
    "SlowMo" : false,
    "SteppedEase" : false,
    "Strong" : false,
    "Draggable" : false,
    "SplitText" : false,
    "VelocityTracker" : false,
    "CSSPlugin" : false,
    "ThrowPropsPlugin" : false,
    "BezierPlugin" : false
  }
}
